		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=24",
		"npm": ">=10"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/exec": "^1.1.1",
		"@vercel/ncc": "^0.38.3",
		"ejs": "^3.1.10",
		"yaml": "^2.8.1"
	}
